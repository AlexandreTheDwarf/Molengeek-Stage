        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/> <!-- vue de base partner -->
        <field name="arch" type="xml">
            <xpath expr="//field[@name='function']" position="after">
                <field name="is_trainer_contact"/>
            </xpath>
        </field>
    </record>
</odoo>